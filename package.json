{
  "name": "fastly-costs",
  "version": "0.6.4",
  "type": "module",
  "description": "Calculate Fastly billing costs per services",
  "bin": {
    "fastly-costs": "dist/cli.js"
  },
  "main": "dist/index.mjs",
  "exports": {
    "./config": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    }
  },
  "scripts": {
    "test": "vitest",
    "lint": "biome lint ./src",
    "fmt": "biome format --write ./src",
    "build": "tsc",
    "build:publish": "tsc -p tsconfig.cjs.json",
    "prepare": "husky",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ysugimoto/fastly-costs.git"
  },
  "keywords": [
    "fastly",
    "billing"
  ],
  "author": "ysugimoto",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/node": "^20.11.19",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "dayjs": "^1.11.10",
    "table": "^6.8.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "biome lint ./src",
      "biome format --write ./src"
    ]
  }
}
